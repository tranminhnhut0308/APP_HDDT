<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MyLoginApp.Models.BaoCao"
             xmlns:vm="clr-namespace:MyLoginApp.ViewModels.BaoCao"
             x:Class="MyLoginApp.Pages.BaoCao.PhieuXuatPage"
             BackgroundColor="#f5f5f5">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto" VerticalOptions="FillAndExpand">
            <Label Text="🧾 Phiếu Xuất"
                   TextColor="White"
                   FontSize="22"
                   FontAttributes="Bold"
                   VerticalTextAlignment="Center" />
            <Button Text="🔍"
                    Grid.Column="1"
                    FontSize="22"
                    FontAttributes="Bold"
                    Clicked="OnTimKiemClicked"
                    BackgroundColor="Transparent"
                    BorderColor="Transparent"
                    TextColor="White"
                    VerticalOptions="Center"
                    Padding="0,0,10,0"/>
        </Grid>
    </Shell.TitleView>

    <ContentPage.BindingContext>
        <vm:PhieuXuatViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="15" RowSpacing="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tiêu đề -->
            <RowDefinition Height="Auto"/>
            <!-- Tìm kiếm -->
            <RowDefinition Height="*"/>
            <!-- Danh sách -->
            <RowDefinition Height="Auto"/>
            <!-- Phân trang -->
            <RowDefinition Height="Auto"/>
            <!-- Thống kê tổng số liệu -->
        </Grid.RowDefinitions>

        <!-- Danh sách phiếu + tổng số -->
        <StackLayout Grid.Row="2" Spacing="0">
            <RefreshView Command="{Binding RefreshCommand}"
                         IsRefreshing="{Binding IsRefreshing}">
                <CollectionView ItemsSource="{Binding DanhSachPhieuXuat}"
                                Margin="0,5"
                                ItemSizingStrategy="MeasureFirstItem">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:PhieuXuatModel">
                            <Frame Margin="0,10"
                                   Padding="15"
                                   BorderColor="#E0E0E0"
                                   BackgroundColor="White"
                                   CornerRadius="12"
                                   HasShadow="True">
                                <StackLayout Spacing="10">

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Tên hàng hóa : " FontAttributes="Bold" FontSize="16" TextColor="Blue"/>
                                        <Label Text="{Binding HangHoaTen}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Mã phiếu : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding PhieuXuatMa}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Ngày xuất : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding NgayXuat, StringFormat='{0:dd/MM/yyyy HH:mm}'}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Loại vàng : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding LoaiVang}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Cân tổng : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding CanTongFormatted}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="TL Hot : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding TlHotFormatted}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="TL Vàng : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding TruHotFormatted}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Lãi/Lỗ : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding LaiLo, StringFormat='{0:N0} VNĐ'}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Giá gốc : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding GiaGoc, StringFormat='{0:N0} VNĐ'}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Đơn giá : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding DonGia, StringFormat='{0:N0} VNĐ'}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Thành tiền : " FontAttributes="Bold" FontSize="16" TextColor="DarkGreen"/>
                                        <Label Text="{Binding ThanhTien, StringFormat='{0:N0} VNĐ'}" FontAttributes="Bold" FontSize="16" TextColor="DarkGreen"/>
                                    </StackLayout>

                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </StackLayout>

        <!-- Phân trang -->
        <Grid Grid.Row="3"
              ColumnDefinitions="Auto,*,Auto"
              Margin="0,10,0,0"
              VerticalOptions="End">
            <Button Grid.Column="0"
                    Text="← Trước"
                    Command="{Binding GoPreviousPageCommand}"
                    IsEnabled="{Binding CanGoPrevious}"
                    BackgroundColor="#34C759"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="100"/>

            <Label Grid.Column="1"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   Text="{Binding FormattedPageText}"/>

            <Button Grid.Column="2"
                    Text="Sau →"
                    Command="{Binding GoNextPageCommand}"
                    IsEnabled="{Binding CanGoNext}"
                    BackgroundColor="#34C759"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="100"/>
        </Grid>

        <!-- Card thống kê tổng số liệu kiểu đẹp -->
        <Frame BackgroundColor="White" CornerRadius="16" Padding="18" Margin="0,0,0,14" HasShadow="True">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12" ColumnSpacing="24">
                <!-- Tổng số phiếu -->
                <VerticalStackLayout Grid.Column="0" Grid.Row="0" Spacing="2">
                    <Label Text="Tổng số phiếu" TextColor="#888" FontSize="12"/>
                    <Label Text="{Binding TongSoPhieu}" TextColor="#1976D2" FontSize="16" FontAttributes="Bold"/>
                </VerticalStackLayout>
                <!-- Tổng cân -->
                <VerticalStackLayout Grid.Column="1" Grid.Row="0" Spacing="2">
                    <Label Text="Tổng cân" TextColor="#888" FontSize="12"/>
                    <Label Text="{Binding TongCanTongAllFormatted}" TextColor="#222" FontSize="16" FontAttributes="Bold"/>
                </VerticalStackLayout>
                <!-- Tổng TL hột -->
                <VerticalStackLayout Grid.Column="0" Grid.Row="1" Spacing="2">
                    <Label Text="Tổng TL hột" TextColor="#888" FontSize="12"/>
                    <Label Text="{Binding TongTLHotAllFormatted}" TextColor="#222" FontSize="16" FontAttributes="Bold"/>
                </VerticalStackLayout>
                <!-- Tổng TL thực -->
                <VerticalStackLayout Grid.Column="1" Grid.Row="1" Spacing="2">
                    <Label Text="Tổng TL thực" TextColor="#888" FontSize="12"/>
                    <Label Text="{Binding TongTruHotAllFormatted}" TextColor="#222" FontSize="16" FontAttributes="Bold"/>
                </VerticalStackLayout>
                <!-- Tổng giá gốc -->
                <VerticalStackLayout Grid.Column="0" Grid.Row="2" Spacing="2">
                    <Label Text="Tổng giá gốc" TextColor="#888" FontSize="12"/>
                    <Label Text="{Binding TongGiaGocAll, StringFormat='{0:N0} VNĐ'}" TextColor="#FF9800" FontSize="16" FontAttributes="Bold"/>
                </VerticalStackLayout>
                <!-- Tổng thành tiền -->
                <VerticalStackLayout Grid.Column="1" Grid.Row="2" Spacing="2">
                    <Label Text="Tổng thành tiền" TextColor="#888" FontSize="12"/>
                    <Label Text="{Binding TongThanhTienAll, StringFormat='{0:N0} VNĐ'}" TextColor="#388E3C" FontSize="16" FontAttributes="Bold"/>
                </VerticalStackLayout>
                <!-- Tổng lãi/lỗ -->
                <VerticalStackLayout Grid.Column="0" Grid.Row="3" Spacing="2">
                    <Label Text="Tổng lãi/lỗ" TextColor="#888" FontSize="12"/>
                    <Label Text="{Binding TongLaiLoAll, StringFormat='{0:N0} VNĐ'}" TextColor="#E53935" FontSize="16" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>
    </Grid>
</ContentPage>
