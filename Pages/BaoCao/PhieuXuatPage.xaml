<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MyLoginApp.Models.BaoCao"
             xmlns:vm="clr-namespace:MyLoginApp.ViewModels.BaoCao"
             x:Class="MyLoginApp.Pages.BaoCao.PhieuXuatPage"
             Title="Phiếu Xuất">

    <ContentPage.BindingContext>
        <vm:PhieuXuatViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="15" RowSpacing="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tiêu đề -->
            <RowDefinition Height="Auto"/>
            <!-- Tìm kiếm -->
            <RowDefinition Height="*"/>
            <!-- Danh sách -->
            <RowDefinition Height="Auto"/>
            <!-- Phân trang -->
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <Frame Grid.Row="0"
               BackgroundColor="#FF8C00"
               Padding="15"
               CornerRadius="10"
               HasShadow="True">
            <Grid>
                <Label Text="📦 Danh Sách Phiếu Xuất"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="FillAndExpand"
                       HorizontalTextAlignment="Center"
                       TextColor="White" />
            </Grid>
        </Frame>

        <!-- Tìm kiếm -->
        <Frame Grid.Row="1"
               Padding="10"
               BackgroundColor="#F2F2F2"
               CornerRadius="10"
               HasShadow="False">
            <Entry Placeholder="Tìm kiếm theo mã, tên hàng..."
                   Text="{Binding SearchKeyword}"
                   FontSize="14"/>
        </Frame>

        <!-- Danh sách phiếu + tổng số -->
        <StackLayout Grid.Row="2" Spacing="5">
            <Label Text="{Binding DanhSachPhieuXuat.Count, StringFormat='Tổng số: {0} phiếu'}"
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="End"/>

            <RefreshView Command="{Binding RefreshCommand}"
                         IsRefreshing="{Binding IsRefreshing}">
                <CollectionView ItemsSource="{Binding DanhSachPhieuXuat}"
                                Margin="0,5"
                                ItemSizingStrategy="MeasureFirstItem">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:PhieuXuatModel">
                            <Frame Margin="0,10"
                                   Padding="15"
                                   BorderColor="#E0E0E0"
                                   BackgroundColor="White"
                                   CornerRadius="12"
                                   HasShadow="True">
                                <StackLayout Spacing="10">

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Tên hàng hóa : " FontAttributes="Bold" FontSize="16" TextColor="Blue"/>
                                        <Label Text="{Binding HangHoaTen}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Mã phiếu : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding PhieuXuatMa}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Ngày xuất : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding NgayXuat, StringFormat='{0:dd/MM/yyyy HH:mm}'}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Loại vàng : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding LoaiVang}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Cân tổng : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding CanTong, StringFormat='{0:N3}'}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="TL Hot : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding TlHot, StringFormat='{0:N3}'}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Trừ Hot : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding TruHot, StringFormat='{0:N3}'}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Lãi/Lỗ : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding LaiLo, StringFormat='{0:N0} VNĐ'}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Giá gốc : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding GiaGoc, StringFormat='{0:N0} VNĐ'}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Đơn giá : " FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding DonGia, StringFormat='{0:N0} VNĐ'}" FontSize="16"/>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Thành tiền : " FontAttributes="Bold" FontSize="16" TextColor="DarkGreen"/>
                                        <Label Text="{Binding ThanhTien, StringFormat='{0:N0} VNĐ'}" FontAttributes="Bold" FontSize="16" TextColor="DarkGreen"/>
                                    </StackLayout>

                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </StackLayout>

        <!-- Phân trang -->
        <Grid Grid.Row="3"
              ColumnDefinitions="Auto,*,Auto"
              Margin="0,10,0,0"
              VerticalOptions="End">
            <Button Grid.Column="0"
                    Text="← Trước"
                    Command="{Binding GoPreviousPageCommand}"
                    IsEnabled="{Binding CanGoPrevious}"
                    BackgroundColor="#34C759"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="100"/>

            <Label Grid.Column="1"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   Text="{Binding FormattedPageText}"/>

            <Button Grid.Column="2"
                    Text="Sau →"
                    Command="{Binding GoNextPageCommand}"
                    IsEnabled="{Binding CanGoNext}"
                    BackgroundColor="#34C759"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="100"/>
        </Grid>
    </Grid>
</ContentPage>
