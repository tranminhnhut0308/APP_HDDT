<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MyLoginApp.ViewModels"
             xmlns:model="clr-namespace:MyLoginApp.Models.BaoCao"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MyLoginApp.Pages.BaoCao.TonKhoNhomVangPage"
             BackgroundColor="#f5f5f5"
             Title="Tồn kho loại vàng">

    <ContentPage.BindingContext>
        <vm:TonKhoNhomVangViewModel />
    </ContentPage.BindingContext>

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto,Auto" VerticalOptions="FillAndExpand">
            <Label Text="Tồn kho loại vàng"
                   TextColor="White"
                   FontSize="22"
                   FontAttributes="Bold"
                   VerticalTextAlignment="Center" />
            <Button Text="🔍"
                    Grid.Column="1"
                    FontSize="22"
                    FontAttributes="Bold"
                    Clicked="OnTimKiemClicked"
                    BackgroundColor="Transparent"
                    BorderColor="Transparent"
                    TextColor="White"
                    VerticalOptions="Center"
                    Padding="0,0,10,0"/>
            <VerticalStackLayout Grid.Column="2" 
                               HorizontalOptions="End"
                               Spacing="5">
                <HorizontalStackLayout Spacing="10">
                    <ImageButton Source="search.png"
                               HeightRequest="24"
                               WidthRequest="24"
                               Command="{Binding ShowFilterPopupCommand}"/>
                    <ImageButton Source="{Binding IsAutoRefreshEnabled, Converter={StaticResource BoolToAutoRefreshIconConverter}}"
                               HeightRequest="24"
                               WidthRequest="24"
                               Command="{Binding ToggleAutoRefreshCommand}"
                               ToolTipProperties.Text="Bật/tắt tự động làm mới"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </Shell.TitleView>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- ComboBox loại vàng -->
        <HorizontalStackLayout Grid.Row="0" 
                             Spacing="10"
                             Margin="10">
            <Picker Title="Chọn loại vàng"
                    ItemsSource="{Binding DanhSachLoaiVang}"
                    SelectedItem="{Binding SelectedLoaiVang}"
                    SelectedIndexChanged="OnLoaiVangSelectedIndexChanged"
                    WidthRequest="200"
                    HorizontalOptions="Start"/>
        </HorizontalStackLayout>

        <!-- Thống kê tổng -->
        <Frame Grid.Row="1"
               Margin="10,0,10,5"
               Padding="10"
               BorderColor="#1976D2"
               CornerRadius="8"
               HasShadow="True">
            <Grid ColumnDefinitions="*,*,*,*">
                <VerticalStackLayout>
                    <Label Text="Tổng cân tổng:" FontAttributes="Bold"/>
                    <Label Text="{Binding TongCanTong, StringFormat='{0:N2}'}"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="Tổng TL hột:" FontAttributes="Bold"/>
                    <Label Text="{Binding TongTLHot, StringFormat='{0:N2}'}"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="Tổng TL vàng:" FontAttributes="Bold"/>
                    <Label Text="{Binding TongTLVang, StringFormat='{0:N2}'}"/>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="Tổng công gốc:" FontAttributes="Bold"/>
                    <Label Text="{Binding TongCongGoc, StringFormat='{0:N0}'}"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <!-- Danh sách tồn kho -->
        <CollectionView Grid.Row="2"
                      ItemsSource="{Binding DanhSachHienThi}"
                      Margin="10"
                      EmptyView="Không có dữ liệu">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" 
                           Padding="10" 
                           BorderColor="#DDDDDD"
                           CornerRadius="8"
                           HasShadow="True">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" 
                              ColumnDefinitions="Auto,*"
                              ColumnSpacing="10"
                              RowSpacing="5">
                            
                            <!-- Loại vàng -->
                            <Label Grid.Row="0" 
                                   Grid.Column="0" 
                                   Text="Loại vàng:" 
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="0" 
                                   Grid.Column="1" 
                                   Text="{Binding LOAI_TEN}"/>

                            <!-- Mã hàng -->
                            <Label Grid.Row="1" 
                                   Grid.Column="0" 
                                   Text="Mã hàng:" 
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="1" 
                                   Grid.Column="1" 
                                   Text="{Binding HANGHOAMA}"/>

                            <!-- Tên hàng -->
                            <Label Grid.Row="2" 
                                   Grid.Column="0" 
                                   Text="Tên hàng:" 
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="2" 
                                   Grid.Column="1" 
                                   Text="{Binding HANG_HOA_TEN}"/>

                            <!-- Cân tổng -->
                            <Label Grid.Row="3" 
                                   Grid.Column="0" 
                                   Text="Cân tổng:" 
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="3" 
                                   Grid.Column="1" 
                                   Text="{Binding CAN_TONG, StringFormat='{0:N2}'}"/>

                            <!-- TL hột -->
                            <Label Grid.Row="4" 
                                   Grid.Column="0" 
                                   Text="TL hột:" 
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="4" 
                                   Grid.Column="1" 
                                   Text="{Binding TL_HOT, StringFormat='{0:N2}'}"/>

                            <!-- TL vàng -->
                            <Label Grid.Row="5" 
                                   Grid.Column="0" 
                                   Text="TL vàng:" 
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="5" 
                                   Grid.Column="1" 
                                   Text="{Binding TL_VANG, StringFormat='{0:N2}'}"/>

                            <!-- Công gốc -->
                            <Label Grid.Row="6" 
                                   Grid.Column="0" 
                                   Text="Công gốc:" 
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="6" 
                                   Grid.Column="1" 
                                   Text="{Binding CONG_GOC, StringFormat='{0:N0}'}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Phân trang -->
        <HorizontalStackLayout Grid.Row="3" 
                              HorizontalOptions="Center" 
                              Spacing="20"
                              Margin="0,10,0,0">
            <Button Text="Trước"
                    Command="{Binding GoPreviousPageCommand}"
                    IsEnabled="{Binding CanGoPrevious}"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    WidthRequest="100"/>
            <Button Text="Sau"
                    Command="{Binding GoNextPageCommand}"
                    IsEnabled="{Binding CanGoNext}"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    WidthRequest="100"/>
        </HorizontalStackLayout>

        <!-- Loading indicator -->
        <ActivityIndicator Grid.Row="0" 
                          Grid.RowSpan="4"
                          IsRunning="{Binding IsLoading}"
                          IsVisible="{Binding IsLoading}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
    </Grid>
</ContentPage>